@model IEnumerable<codeApp.Models.Articles>

@{
    ViewBag.Title = "Get";
}

<body style="background-color:white;" >
    <h2>Stay in touch with world news</h2>
     <table class="table" style=" max-width:100%;margin-top:0; background-color:ghostwhite;">
        <tr>
           <th>

           </th>
            <th></th>
            <th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="padding-left:2%; padding-top: 2%;">
                    <blockquote class="embedly-card" data-card-key="397aacd3361e4911b706ec4b31b7d2cd" data-card-type="article"><h4><a href="@item.url"></a></h4></blockquote>
                    <script async src="//cdn.embedly.com/widgets/platform.js" charset="UTF-8"></script>
                </td>
                <td style="margin-top:3%; padding-left:2%; padding-top: 2%;">
                 
                    <a style="font-family:'Times New Roman';font-size:1.8em;">
                        @Html.DisplayFor(model => item.name)  <br />
                    </a><br />

                    @Html.DisplayFor(modelItem => item.description)<br />
                    @Html.DisplayFor(modelItem => item.url)
                </td>

            </tr>
        }

    </table>

</body>