@model codeApp.Models.News

@{
    ViewBag.Title = "Create";
}

<h2>Blog news</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tell us what is on your mind!</h4>
        <hr />
           
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", @style = "min-height: 100px;", placeholder="What is on your mind? (Max length of status is 100 characters!)" } })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UrlNews, new { htmlAttributes = new { @class = "form-control", @style = "min-height: 100px;" ,placeholder ="You can add url too"} })
                        @Html.ValidationMessageFor(model => model.UrlNews, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-12">
                        <button id="share" style="width:40%;" class="btn btn-info">Create</button>
                    </div>
                </div>
    </div>
}

